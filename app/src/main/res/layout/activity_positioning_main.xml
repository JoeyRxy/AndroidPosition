<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PositioningMainActivity">
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/pv"
        android:layout_width="wrap_content"
        android:layout_height="400dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/moveLeftBtn"
            android:text="左"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/moveRightBtn"
            android:text="右"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/moveUpBtn"
            android:text="上"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/moveDownBtn"
            android:text="下"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="模拟切换地图"
            android:id="@+id/changeMapBtn"/>
        <Button
            android:id="@+id/getInfoBtn"
            android:text="模拟采集数据"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/intentBtn"
            android:text="已采集的信息"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/relatedDataBtn"
            android:text="相关指纹数据"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/locateBtn"
            android:text="定位测试"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:inputType="number"
        android:hint="samples per second"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_fps"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/disableDirBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/neighborDisText"
            android:layout_width="170dp"
            android:hint="邻接距离大小"
            android:inputType="number"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:inputType="number"
        android:hint="最大信号差值阈值"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/thresholdText"/>
</LinearLayout>